# Edge runtime (Jetson)
GODOWN_ID=GDN_001
EDGE_TIMEZONE=Asia/Kolkata
MQTT_BROKER_HOST=192.168.1.10
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

EDGE_BACKEND_URL=http://192.168.1.20:8001
# Required if backend auth is enabled
EDGE_BACKEND_TOKEN=change-me

# Outbox buffering
EDGE_OUTBOX_ENABLED=true
EDGE_OUTBOX_DB_PATH=/opt/app/data/outbox.db
EDGE_OUTBOX_FLUSH_INTERVAL_SEC=2
EDGE_OUTBOX_BATCH_SIZE=100
EDGE_OUTBOX_MAX_ATTEMPTS=20
EDGE_OUTBOX_MAX_QUEUE=50000
EDGE_OUTBOX_MAX_PAYLOAD_BYTES=524288

# Watchdog / heartbeat
EDGE_WATCHDOG_ENABLED=true
EDGE_WATCHDOG_INTERVAL_SEC=5
EDGE_WATCHDOG_CAMERA_STALL_SEC=45
EDGE_WATCHDOG_FATAL_SEC=180
EDGE_WATCHDOG_HEARTBEAT_PATH=/opt/app/data/edge_health.json

# Speaker / siren
EDGE_SPEAKER_DEVICE=hw:2,0
EDGE_SIREN_FILE=/opt/app/config/siren_16bit.wav
EDGE_SIREN_ENABLED=true
EDGE_SIREN_COOLDOWN_SEC=60
EDGE_SIREN_DURATION_SEC=10
EDGE_SIREN_EVENT_TYPES=AFTER_HOURS_PERSON_DETECTED,PERSON_INTRUSION,FIRE_DETECTED,WATCHLIST_MATCH
